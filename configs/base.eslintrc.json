{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "plugin:prettier/recommended"
  ], 
  "plugins": [
    "@typescript-eslint",
    "import",
    "no-null",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": [
    "node_modules",
    "*.d.ts"
  ],
  "rules": {
    "@typescript-eslint/no-namespace": "off"
  }
}
