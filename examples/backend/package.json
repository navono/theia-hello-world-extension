{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "scripts": {
    "prestart": "npm run lint && npm run build",
    "start": "moleculer-runner --config dist/moleculer.config.js",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --repl --hot --config moleculer.config.ts services/**/*.service.ts",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "deps": "npm-check -u",
    "lint": "eslint . --fix --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "~27.4.0",
    "@types/node": "~17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.5.1",
    "moleculer-repl": "^0.7.0",
    "npm-check": "^5.9.2",
    "rimraf": "~3.0.2",
    "ts-jest": "~27.1.3",
    "ts-node": "^10.4.0",
    "tsutils": "~3.21.0",
    "typescript": "~4.5.4"
  },
  "license": "MIT",
  "dependencies": {
    "@types/mkdirp": "^1.0.2",
    "backend": "^0.0.0",
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^1.0.4",
    "moleculer": "^0.14.19",
    "moleculer-db": "^0.8.17",
    "moleculer-db-adapter-sequelize": "^0.2.13",
    "moleculer-web": "^0.10.4",
    "ramda": "^0.28.0",
    "sequelize": "^6.16.2",
    "sqlite3": "^5.0.2",
    "tslib": "~2.3.1"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
