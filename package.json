{
  "private": true,
  "scripts": {
    "prepare": "lerna run prepare && yarn download:plugins",
    "rebuild": "yarn rebuild:browser && yarn rebuild:electron",
    "rebuild:browser": "theia rebuild:browser",
    "rebuild:electron": "theia rebuild:electron",
    "start:browser": "yarn rebuild:browser && yarn --cwd browser-app start",
    "start:electron": "yarn rebuild:electron && yarn --cwd electron-app start",
    "download:plugins": "theia download:plugins",
    "watch": "lerna run --parallel watch",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "2.5.1",
    "lerna": "2.4.0"
  },
  "workspaces": [
    "theia-hello-world-extension",
    "browser-app",
    "electron-app"
  ],
  "theiaPluginsDir": "plugins"
}